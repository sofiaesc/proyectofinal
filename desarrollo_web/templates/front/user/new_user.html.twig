{% extends 'base.html.twig' %}

{% block title %}Registrarse{% endblock %}

{% block body %}
<div class='main-container'>
    <div class="body-container">
        {{ form_start(form, {'attr': {'class': 'form'}}) }}
            <div class="container">
                <div class="input-container">
                    <span class="material-icons">mail</span>
                    {{ form_widget(form.email, {'attr': {'placeholder': 'Ingrese su correo electrónico', 'required': true}}) }}
                </div>

                <div class="input-container">
                    <span class="material-icons">person</span>
                    {{ form_widget(form.nombre, {'attr': {'placeholder': 'Ingrese su nombre', 'required': true}}) }}
                </div>

                <div class="input-container">
                    <span class="material-icons">person_outline</span>
                    {{ form_widget(form.apellido, {'attr': {'placeholder': 'Ingrese su apellido', 'required': true}}) }}
                </div>

                <div class="input-container">
                    <span class="material-icons">lock</span>
                    {{ form_widget(form.password, {'attr': {'placeholder': 'Ingrese su contraseña', 'required': true, 'pattern': '(?=.*[a-z])(?=.*[A-Z])(?=.*\\d)[A-Za-z\\d!@#$%^&*]{8,}', 'title': 'La contraseña debe tener al menos una letra mayúscula, una minúscula, un número y un mínimo de 8 caracteres.'}}) }}
                </div>

                <button type="submit" class="form-button">Registrarse</button>

                <span class="reg">¿Ya está registrado? <strong><a href="{{ path('app_login') }}" class="text-white">Iniciar sesión</a></strong></span>
            </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
