{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
<div class="main-container">
    <div class="body-container">
        <form action="{{ path('app_login') }}" method="post">
            <div class="container">
                <div class="input-container">
                    <span class="material-icons">mail</span>
                    <input type="email" placeholder="Ingrese su correo electrónico" name="email" required>
                </div>

                <div class="input-container">
                    <span class="material-icons">lock</span>
                    <input type="password" placeholder="Ingrese su contraseña" name="password" required>
                </div>

                <button type="submit" class="form-button">Iniciar sesión</button>

                <div class="form-footer"> 
                    <span class="reg">¿No tiene una cuenta? 
                        <strong><a href="{{ path('app_new_user') }}" class="text-white">Registrarse</a></strong>
                    </span>
                    <span class="psw"><a href="#">¿Ha olvidado su contraseña?</a></span>
                </div>
            </div>
        </form>
    </div>
</div>
{% endblock %}
